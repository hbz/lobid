  "properties": {
    "id": {
      "$ref": "id.json"
    },
    "type": {
      "type": "string",
      "const": "Product"
    },
    "alternateName": {
      "$ref": "alternateName.json"
    },
    "description": {
      "$ref": "description.json"
    },
    "name": {
      "$ref": "name.json"
    },
    "image": {
      "$ref": "image.json"
    },
    "hasPart": {
      "$ref": "image.json"
    }
  },
  "required": [
    "id",
    "name",
    "type",
    "description"
  ]
