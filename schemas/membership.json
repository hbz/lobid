{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hbz.github.io/lobid/schemas/membership.json",
  "title": "Membership",
  "description": "Schema to describe a membership relation",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "const": "Role"
      },
      "startDate": {
        "$ref": "https://hbz.github.io/lobid/schemas/startDate.json"
      },
      "endDate": {
        "$ref": "https://hbz.github.io/lobid/schemas/endDate.json"
      },
      "roleName": {
        "$ref": "https://hbz.github.io/lobid/schemas/localizedString.json"
      },
      "member": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "https://hbz.github.io/lobid/schemas/id.json"
          },
          "name": {
            "$ref": "https://hbz.github.io/lobid/schemas/name.json"
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "required": [
      "type",
      "roleName",
      "member"
    ]
  }
}