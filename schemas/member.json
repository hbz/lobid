{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"resource:/member.json",
  "title":"Membership",
  "description":"Schema to describe a membership relation",
  "type":"object",
  "properties":{
    "type":{
      "type":"string",
      "const":"Role"
    },
    "startDate":{
      "$ref":"resource:/startDate.json"
    },
    "endDate":{
      "$ref":"resource:/endDate.json"
    },
    "roleName":{
      "$ref":"resource:/localizedString.json"
    },
    "member":{
      "type":"object",
      "properties":{
        "id":{
          "$ref":"resource:/id.json"
        },
        "name":{
          "$ref":"resource:/name.json"
        }
      },
      "required":[
        "id"
      ]
    }
  },
  "required":[
    "type",
    "roleName",
    "member"
  ]
}