{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"resource:/person.json",
  "title":"person",
  "description":"Schema to describe persons at lobid.",
  "type":"object",
  "properties":{
    "@context":{
      "$ref":"resource:/context.json"
    },
    "id":{
      "$ref":"resource:/id.json"
    },
    "type":{
      "type":"string",
      "const":"Person"
    },
    "email":{
      "$ref":"resource:/email.json"
    },
    "alternateName":{
      "$ref":"resource:/alternateName.json"
    },
    "name":{
      "$ref":"resource:/name.json"
    },
    "telephone":{
      "$ref":"resource:/telephone.json"
    },
    "sameAs":{
      "$ref":"resource:/sameAs.json"
    },
    "image":{
      "$ref":"resource:/image.json"
    },
    "affiliation":{
      "$ref":"resource:/affiliation.json"
    },
    "alumniOf":{
      "$ref":"resource:/alumniOf.json"
    }
  },
  "required":[
    "id",
    "name",
    "type"
  ]
}